<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_category_layout_margin_for_cardView"
    app:cardCornerRadius="@dimen/layout_category_cardCornerRadius_for_cardView"
    app:cardElevation="@dimen/layout_category_cardElevation_for_cardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/category_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_category_height_margin_for_imageView"
            android:scaleType="centerCrop"
            tools:src="@drawable/breakfas"/>

        <TextView
            android:id="@+id/category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/layout_category_paddingTop_for_textView"
            android:paddingBottom="@dimen/layout_category_paddingBottom_for_textView"
            android:textAlignment="center"
            android:textColor="@color/teal_200"
            android:fontFamily="@font/courgette"
            android:textSize="@dimen/recipe_title_text_size" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
